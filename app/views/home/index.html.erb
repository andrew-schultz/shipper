<div id="full_page">
	<div id="user_panel">
		<div class="panel_wrapper">
			<h2 class="snug top_space"><%= link_to @user.username, @user %>'s Fleet</h2>
			<p class="subtext snug">Click a ship to expand</p>
			<div id="boats">
				<% @boats.each do |b| %>
					<div class="boat_name fat_sub_title bottom_space">
						<%= image_tag b.avatar.url(:thumb), class: "thumb fill i" %><%= b.name %>
						<div class="boat_hide"<% link_to b %>>
							<p class="snug small right"><%= link_to b.capacity, b %> containers</p>
							<p class="snug small right"><%= link_to b.location.name, b %></p>
							<p class="snug fat_sub_title top_space right">Current Jobs</p>
							<% if b.jobs.claimed.count < 1 %>
								<p class="snug small right">none</p>
							<% else %>
								<% b.jobs.claimed.each do |j| %>
									<p class="snug small right"><%= link_to j.name, j %></p>
								<% end %>
							<% end %>	
						</div>
					</div>
				<% end %>	
				<p class="boatbutton darkgreen"><%= link_to "New Ship", new_boat_path %></p>
			</div>
			<div class="follow_ships">
				<h2 class="snug top_space tab active" id="follow">Follow</h2>
				<h2 class="snug top_space tab" id="all">All</h2>
				<div id="content">
					<div id="followboat">
						<% @follow_ships.each do |f| %>
							<div class="boat_name fat_sub_title bottom_space">
								<%= image_tag f.avatar.url(:thumb), class: "thumb fill" %><%= f.name %>
								<div class="boat_hide"<% link_to f %>>
									<p class="snug small right"><%= link_to f.user.username, f.user %>'s fleet</p>
									<p class="snug small right"><%= link_to f.capacity, f %> containers</p>
									<p class="snug small right"><%= link_to f.location.name, f %></p>
									<p class="snug fat_sub_title top_space right">Current Jobs</p>
									<% if f.jobs.claimed.count < 1 %>
										<p class="snug small right">none</p>
									<% else %>
										<% f.jobs.claimed.each do |j| %>
											<p class="snug small right"><%= link_to j.name, j %></p>
										<% end %>
									<% end %>	
								</div>
							</div>
						<% end %>
					</div>
					<div id="allboat">
						<% @allboats.each do |a| %>
							<div class=" boat_name fat_sub_title bottom_space">
								<%= image_tag a.avatar.url(:thumb), class: "thumb fill" %><%= a.name %>
								<div class="boat_hide"<% link_to a %>>
									<p class="snug small right"><%= link_to a.user.username, a.user %>'s fleet</p>
									<p class="snug small right bold"><%= link_to a.capacity, a %> containers</p>
									<p class="snug small right"><%= link_to a.location.name, a %></p>
									<p class="snug fat_sub_title top_space right">Current Jobs</p>
									<% if a.jobs.claimed.count < 1 %>
										<p class="snug small right">none</p>
									<% else %>
										<% a.jobs.claimed.each do |j| %>
											<p class="snug small right"><%= link_to j.name, j %></p>
										<% end %>
									<% end %>	
								</div>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="map">
