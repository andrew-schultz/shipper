	<div id="jobs_panel">
		<div class="panel_wrapper">
			<div id="new_job">
				<h2>New Job</h2>
				<%= render partial: 'jobs/new', local: {job: @job} %>
			</div>
			<div id="open_jobs">
				<h2>Open Jobs</h2>
				<% if @jobs.count < 1 %>
					<p class="small">none</p>
				<% else %>
					<% @jobs.each do |j| %>
						<h3 class="snug"><%= link_to j.name, j %></h3>
						<p class="snug ago">Posted by <%= j.user.username %> <%= time_ago_in_words(j.created_at) + " ago"%></p>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>